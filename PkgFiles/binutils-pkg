echo "installing binutils-pass1"
if test -f $LFS/pkg_pass/binutils-pass1; then
  echo "Binutils is installed."
  exit 0
fi
cd $LFS/sources
tar -xf binutils-2.41.tar.xz
if [ $? -eq 0 ]; then
    echo "succesed"
else
    echo "failed to extract"
    exit 1
fi
cd binutils-2.41
mkdir -v build
cd build
../configure --prefix=$LFS/tools \
 --with-sysroot=$LFS \
 --target=$LFS_TGT \
 --disable-nls \
 --enable-gprofng=no \
 --disable-werror
if [ $? -eq 0 ]; then
    echo "succesed"
else
    echo "failed"
    exit 1
fi
make $MAKE_FLAGS
 if [ $? -eq 0 ]; then
    echo "succesed"
else
    echo "failed"
    exit 1
fi
make install
 if [ $? -eq 0 ]; then
    echo "succesed"
else
    echo "failed"
    exit 1
fi
touch $LFS/pkg_pass/binutils-pass1
cd $0