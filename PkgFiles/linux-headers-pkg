echo "installing linux-headers"
if test -f $LFS/pkg_pass/linux-headers; then
  echo "Linux headers is installed."
  exit 0
fi
cd $LFS/sources
tar -xf linux-6.4.12.tar.xz
if [ $? -eq 0 ]; then
    echo "succesed"
else
    echo "failed to extract"
    exit 1
fi
cd linux-6.4.12.tar.xz
make mrproper $MAKE_FLAGS
 if [ $? -eq 0 ]; then
    echo "succesed"
else
    echo "failed"
    exit 1
fi
make headers $MAKE_FLAGS
 if [ $? -eq 0 ]; then
    echo "succesed"
else
    echo "failed"
    exit 1
fi
find usr/include -type f ! -name '*.h' -delete
cp -rv usr/include $LFS/usr
if [ $? -eq 0 ]; then
    echo "succesed"
else
    echo "failed"
    exit 1
fi
touch $LFS/pkg_pass/linux-headers
cd $0